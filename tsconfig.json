{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "assets/**/*",
    "modules/**/*",
    "styles/**/*",
    "hooks/**/*",
    "components/**/*",
    "components/menu",
    "components/Wrapper.jsx",
    "components/MainMenu.jsx",
    "components/LevelSelect.jsx",
    "components/CoolerButton.jsx"
  ],
  "extends": "expo/tsconfig.base"
}