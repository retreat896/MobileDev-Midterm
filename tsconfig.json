{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@components/*":[
        "components/*"
      ],
      "@hooks/*":[
        "hooks/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "assets/**/*",
    "modules/**/*",
    "styles/**/*",
    "components/**/*",
    "hooks/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
