{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "modules/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "assets/**/*",
    "modules/**/*",
    "styles/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
